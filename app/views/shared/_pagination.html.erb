<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <li class="page-item <%= current_page == 1 ? 'disabled' : '' %>">
      <a class="page-link" href="javascript:void(0)" data-page="<%= current_page - 1 %>" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span> <%= t("#{resource_name}.pagination.previous") %>
      </a>
    </li>
    <% (1..total_pages).each do |page| %>
      <li class="page-item <%= current_page == page ? 'active' : '' %>">
        <a class="page-link" href="javascript:void(0)" data-page="<%= page %>"><%= page %></a>
      </li>
    <% end %>
    <li class="page-item <%= current_page == total_pages ? 'disabled' : '' %>">
      <a class="page-link" href="javascript:void(0)" data-page="<%= current_page + 1 %>" aria-label="Next">
        <%= t("#{resource_name}.pagination.next") %> <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
  <h6 class="text-center mt-2">
    <%= t("#{resource_name}.pagination.showing_page", page: current_page, total_pages: total_pages, count: resource_count) %>
  </h6>
</nav>
